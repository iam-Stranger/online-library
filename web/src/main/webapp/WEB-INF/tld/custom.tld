<?xml version="1.0" encoding="UTF-8" ?>
<taglib version="2.1"
        xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
    http://java.sun.com/xml/ns/javaee/web-jsptaglibrary_2_1.xsd">
    <tlib-version>1.0</tlib-version>
    <short-name>ctg</short-name>
    <uri>customtags</uri>
    <tag>
        <name>date-tag</name>
        <tag-class>by.loiko.library.tag.DateTag</tag-class>
        <body-content>empty</body-content>
    </tag>
    <tag>
        <name>is-admin</name>
        <tag-class>by.loiko.library.tag.AdminRoleTag</tag-class>
        <body-content>JSP</body-content>
    </tag>
    <tag>
        <name>is-librarian</name>
        <tag-class>by.loiko.library.tag.LibrarianRoleTag</tag-class>
        <body-content>JSP</body-content>
    </tag>
    <tag>
        <name>is-user</name>
        <tag-class>by.loiko.library.tag.UserRoleTag</tag-class>
        <body-content>JSP</body-content>
    </tag>
    <tag>
        <name>is-guest</name>
        <tag-class>by.loiko.library.tag.GuestRoleTag</tag-class>
        <body-content>JSP</body-content>
    </tag>
</taglib>